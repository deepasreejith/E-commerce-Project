<%-include('../layouts/admin_header.ejs') %>

<div id="page-content-wrapper" style="margin-left: 200px;">
  <h5 style="margin-top: 20px;text-align: center;margin-top: 20px;"><strong>EDIT CATEGORY</strong></h5>
  <HR>
    <div class="container" style="width: 60%; height: auto; margin-top: 80px;border: 2px solid #dbcdcd; padding: 20px;box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); ">
    <form action="" method="post" enctype="multipart/form-data">
        <div class="form-group" >
            <label for="categeoryname"><b> Name</b></label>
            <input type="text" name="name" class="form-control" value="<%= category.name %>" id="categeoryname" required>
           
          </div>
          <br>
          <div class="form-group">
            <label><b>Image</b></label>
            <br>
            <img id="categoryImage" src="categoryimages/<%= category.image %>" width="60px" height="50px" alt="<%= category.image %>">
        
         <div class="form-group">
          
          <input type="text" name="cimage" class="form-control" value="<%= category.image %>" id="categeory" style="display: none;" >
      </div>
      
            <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1" >
            
          </div>
        <br>
      
        <button class="btn btn-dark "  type="submit">Update</button>
        <br>
        <% if(typeof message !=='undefined'){
          %>
          <p style="color: rgb(8, 156, 23);">
          <%= message %>
          </p>
          <%
          }
          %>
      </form>
    </div>


  </div>
</div>
        <script>
            const categoryImage = document.getElementById('categoryImage');
            console.log(categoryImage)
            const imageInput = document.getElementById('exampleFormControlFile1');
            imageInput.addEventListener('change', function () {
            const selectedImage = this.files[0]; // Get the selected file

            if (selectedImage) {
             const imageURL = URL.createObjectURL(selectedImage); // Create a URL for the selected image
             categoryImage.src = imageURL; // Update the image source
             console.log("new url:"+imageURL)
             }
            });
        </script>
    <%-include('../layouts/admin_footer.ejs') %>